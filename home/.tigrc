# here's the default:
# https://github.com/jonas/tig/blob/master/tigrc

set main-view = \
  date:custom,format="%m/%d" \
  author:full,maxwidth=16 \
  id:yes  \
  commit-title:yes,graph,refs,overflow=yes:wrap-lines=yes
#date:relative-compact \

set start-on-head = yes     # Start with cursor on HEAD commit
set refresh-mode = periodic # Enum: manual, auto, after-command, periodic
set refresh-interval = 3
set tab-size = 2
set ignore-space = all
set ignore-case = smart-case

# vi:syntax=vim

